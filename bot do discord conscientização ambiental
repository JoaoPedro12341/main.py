import discord
import random
from discord.ext import commands

intents = discord.Intents.default()
intents.message_content = True

reciclar = ['Fazer uma garrafa pet virar um vaso de flores!', 'Fazer um rolo de papel higi√™nico virar um porta-l√°pis!', 'Transformar latas de alum√≠nio em porta-velas decorativos!']
tips = ['Apague a luz ao sair do quarto!', 'Feche a torneira enquanto n√£o estiver utilizando!', 'Tente reciclar sempre que poss√≠vel!', 'Sempre separe os lixos em recicl√°vel e lixo normal!']

bot = commands.Bot(command_prefix='!', intents=intents)
@bot.event
async def on_ready():
    print(f'Bot conectado como {bot.user}')



# ===============================
# MOSTRAR OS COMANDOS EXISTENTES!
# ===============================
@bot.command()
async def ajuda(ctx):
    await ctx.send("Seja bem vindo! Aqui est√° a lista de todos os c√≥digos que eu respondo:")
    await ctx.send('!quiz: o bot te faz uma pergunta!\n !dica: o bot te d√° uma dica sobre preserva√ß√£o ambiental!\n !impacto: o bot te d√° um breve resumo sobre o que a polui√ß√£o causa!\n !poluicao: o bot te d√° um resumo sobre o que √© a polui√ß√£o!\n !recycle: o bot te d√° ideias de reciclagem com materiais acess√≠veis em casa!')
# ====================
# IDEIAS DE RECICLAGEM
# ====================
@bot.command()
async def recycle(ctx):
    await ctx.send("Voc√™ pode reciclar de diversas maneiras! Aqui vai um exemplo:")
    await ctx.send(random.choice(reciclar))

# =========
# PERGUNTAS
# =========
@bot.command()
async def poluicao(ctx):
    await ctx.send("A polui√ß√£o √© a introdu√ß√£o direta ou indireta de subst√¢ncias, materiais ou energia no meio ambiente, tornando-o impuro, inseguro ou impr√≥prio, resultando na degrada√ß√£o do meio ambiente")

# ====
# QUIZ
# ====
@bot.command()
async def quiz(ctx):
    await ctx.send(
        "üå± **QUIZ DO MEIO AMBIENTE** üå±\n\n"
        "Qual desses materiais demora MAIS tempo para se decompor?\n"
        "1Ô∏è‚É£ Papel\n"
        "2Ô∏è‚É£ Casca de banana\n"
        "3Ô∏è‚É£ Garrafa pl√°stica\n\n"
        "Responda com **1, 2 ou 3**"
    )

    def check(msg):
        return msg.author == ctx.author and msg.channel == ctx.channel

    resposta = await bot.wait_for('message', check=check)
    resposta_usuario = resposta.content.strip()

    await ctx.send(f"üì© Voc√™ respondeu: {resposta_usuario}")

    if resposta_usuario == "3":
        await ctx.send("‚úÖ Correto! A garrafa pl√°stica leva centenas de anos para se decompor.")
    elif resposta_usuario == "1":
        await ctx.send("‚ùå Errado! O papel se decomp√µe bem mais r√°pido.")
    elif resposta_usuario == "2":
        await ctx.send("‚ùå Errado! A casca de banana se decomp√µe em poucos meses.")
    else:
        await ctx.send("‚ö†Ô∏è Responda apenas com **1, 2 ou 3**.")

# ===========
# DICA DO DIA
# ===========
@bot.command()
async def dica(ctx):
    await ctx.send(
        "Aqui vai a dica do dia!\n"
        + random.choice(tips)
    )

# =================
# IMPACTO AMBIENTAL
